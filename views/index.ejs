<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>
<body>
    <div class="container mt-5">
        <h1>Inventory Management System</h1>
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2>List of Inventory</h2>
            <a href="/add" class="btn btn-primary">Add New Item</a>
        </div>
        <table class="table-primary table-bordered table-striped table-hover" >
            <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.category %></td>
                <td><%= item.quantity %></td>
                <td><%= item.price %></td>
                <td>
                    <a href="/view/<%= item._id %>" class="btn btn-sm btn-info text-black">View</a>
                    <a href="/edit/<%= item._id %>" class="btn btn-sm btn-warning text-black">Edit</a>

                    <script>
                        function confirmDelete() {
                          return confirm('Are you sure you want to delete this item?');
                        }
                      </script>
                    <form action="/delete/<%= item._id %>" method="POST"  class="delete-form" onsubmit="return confirmDelete()">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-sm btn-danger text-black" type="submit">Delete</button>
                    </form>

                </td>
            </tr>
            <% }) %>
        </tbody>
        </table>
    </div>

       
    </table>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
